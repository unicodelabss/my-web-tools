{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server.js" },
    { "src": "/admin", "dest": "/views/admin.html" },
    { "src": "/tools/(.*)", "dest": "/tools/$1" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}